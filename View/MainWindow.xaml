<Window x:Class="Ynost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Ynost.ViewModels"
        Title="Ynost" Height="750" Width="1200">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Список преподавателей -->
        <StackPanel Grid.Column="0" Background="#f3f6ff">
            <TextBlock Text="Преподаватели" FontSize="16" FontWeight="Bold" Margin="8"/>
            <DataGrid ItemsSource="{Binding Teachers}"
                      SelectedItem="{Binding SelectedTeacher}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False" IsReadOnly="True" Margin="4">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#B0B0B0"/>

        <!-- Правая панель -->
        <ScrollViewer Grid.Column="2" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <!-- 1. Итоговый аттестат -->
                <TextBlock Text="1. Итоговый аттестат" FontWeight="Bold" Margin="0,0,0,6"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.AcademicResults}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="60"/>
                        <DataGridTextColumn Header="Предмет" Binding="{Binding Subject}" Width="120"/>
                        <DataGridTextColumn Header="Семестр 1" Binding="{Binding AvgSem1}" Width="80"/>
                        <DataGridTextColumn Header="Семестр 2" Binding="{Binding AvgSem2}" Width="80"/>
                        <DataGridTextColumn Header="Успех" Binding="{Binding AvgSuccess}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 4. ВПР / НОКО / PISA -->
                <TextBlock Text="2. ВПР / НОКО / PISA" FontWeight="Bold" Margin="0,0,0,6"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.IndependentAssessments}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Процедура" Binding="{Binding Procedure}" Width="120"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=yyyy}" Width="60"/>
                        <DataGridTextColumn Header="Класс/предмет" Binding="{Binding ClassSubject}" Width="140"/>
                        <DataGridTextColumn Header="%\nуспеха" Binding="{Binding Passed}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 6. Олимпиады -->
                <TextBlock Text="3. Олимпиады / конкурсы" FontWeight="Bold" Margin="0,0,0,6"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.StudentOlympiads}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="100"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                        <DataGridTextColumn Header="Результат" Binding="{Binding Result}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 10. Публикации -->
                <TextBlock Text="4. Публикации" FontWeight="Bold" Margin="0,0,0,6"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.Publications}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="100"/>
                        <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="200"/>
                        <DataGridTextColumn Header="Дата" Binding="{Binding Date, StringFormat=yyyy}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- 5. Курсы ПК -->
                <TextBlock Text="5. Курсы ПК" FontWeight="Bold" Margin="0,0,0,6"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.Trainings}" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,12">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Курс" Binding="{Binding CourseName}" Width="200"/>
                        <DataGridTextColumn Header="Часы" Binding="{Binding Hours}" Width="60"/>
                        <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="60"/>
                        <DataGridTextColumn Header="Организатор" Binding="{Binding Provider}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>