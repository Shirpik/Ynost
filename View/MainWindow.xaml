<Window x:Class="Ynost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ynost.Converters" 
    mc:Ignorable="d"
        Title="Ynost" Height="800" Width="1200"
        Loaded="MainWindow_Loaded"
        FontSize="16">

    <Window.Resources>
        <Style x:Key="WrappedTextBlockCellStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="4,2"/>
        </Style>
        <Style x:Key="EditingTextBoxStyle" TargetType="TextBox">
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="SpellCheck.IsEnabled" Value="True"/>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="270" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="#f3f6ff">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Преподаватели" Grid.Row="0" FontWeight="Bold" Margin="8"/>
                <StackPanel Grid.Row="1" Margin="4">
                    <TextBlock Text="Поиск:" Margin="4,0,0,4"/>
                    <TextBox x:Name="SearchBox" TextChanged="SearchBox_TextChanged" Margin="4,0"/>
                </StackPanel>
                <DataGrid x:Name="TeachersGrid" Grid.Row="2" ItemsSource="{Binding Teachers}" SelectedItem="{Binding SelectedTeacher, Mode=TwoWay}" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Margin="4" HorizontalScrollBarVisibility="Auto"
                          PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*" 
                                            ElementStyle="{StaticResource WrappedTextBlockCellStyle}" 
                                            EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#B0B0B0" ResizeBehavior="PreviousAndNext" ResizeDirection="Columns"/>

            <Grid Grid.Column="2">
                <TextBlock Text="{Binding LoadingStatus}" FontSize="18" FontWeight="SemiBold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}"/>

                <TextBlock Text="Войдите в систему для показа данных" FontSize="18" FontWeight="SemiBold"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding ShowLoginPrompt, Converter={StaticResource BoolToVisConverter}}"/>

                <ScrollViewer x:Name="DetailsScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"
                              Visibility="{Binding ShowDataGrid, Converter={StaticResource BoolToVisConverter}}">
                    <StackPanel Margin="10" IsEnabled="{Binding CanEditData}">

                        <!-- 1. Итоговые результаты успеваемости (аттестат) -->
                        <TextBlock Text="1. Итоговые результаты успеваемости (аттестат)" FontWeight="Bold" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.AcademicResults}" SelectedItem="{Binding SelectedTeacher.SelectedAcademicResult, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" 
                                  IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}"
                                  PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="90" MinWidth="80" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Учебный год" Binding="{Binding AcademicPeriod}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Предмет" Binding="{Binding Subject}" Width="200" MinWidth="180" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ср. балл 1 сем." Binding="{Binding AvgSem1}" Width="150" MinWidth="140" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ср. балл 2 сем." Binding="{Binding AvgSem2}" Width="150" MinWidth="140" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Динамика" Binding="{Binding Dynamics}" Width="100" MinWidth="90" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ср. балл успев." Binding="{Binding AvgSuccessRate}" Width="150" MinWidth="140" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ср. балл кач." Binding="{Binding AvgQualityRate}" Width="140" MinWidth="130" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="СОУ" Binding="{Binding SouRate}" Width="80" MinWidth="70" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddAcademicResultCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteAcademicResultCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 2. Результаты государственной итоговой аттестации (ГИА) -->
                        <TextBlock Text="2. Результаты государственной итоговой аттестации (ГИА)" FontWeight="Bold" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.GiaResults}" SelectedItem="{Binding SelectedTeacher.SelectedGiaResult, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Предмет" Binding="{Binding Subject}" Width="180" MinWidth="160" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="90" MinWidth="80" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Кол-во участников" Binding="{Binding TotalParticipants}" Width="160" MinWidth="150" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% «5»" Binding="{Binding PctMark5}" Width="80" MinWidth="70" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% «4»" Binding="{Binding PctMark4}" Width="80" MinWidth="70" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% «3»" Binding="{Binding PctMark3}" Width="80" MinWidth="70" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% «2»/неуд." Binding="{Binding PctFail}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Средний балл" Binding="{Binding AvgScore}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddGiaResultCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteGiaResultCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 3. Результаты государственной аттестации (ДЭ) -->
                        <TextBlock Text="3. Результаты государственной аттестации (ДЭ)" FontWeight="Bold" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.DemoExamResults}" SelectedItem="{Binding SelectedTeacher.SelectedDemoExamResult, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Наименование компетенции" Binding="{Binding Subject}" Width="240" MinWidth="220" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="100" MinWidth="90" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Кол-во участников" Binding="{Binding TotalParticipants}" Width="160" MinWidth="150" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% «5»" Binding="{Binding PctMark5}" Width="80" MinWidth="70" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% «4»" Binding="{Binding PctMark4}" Width="80" MinWidth="70" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% «3»" Binding="{Binding PctMark3}" Width="80" MinWidth="70" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% «2»" Binding="{Binding PctMark2}" Width="80" MinWidth="70" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Средний балл" Binding="{Binding AvgScore}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddDemoExamResultCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteDemoExamResultCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 4. Результаты освоения ... -->
                        <TextBlock Text="4. Результаты освоения обучающимися образовательных программ по итогам независимой оценки качества образования" FontWeight="Bold" TextWrapping="Wrap" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.IndependentAssessments}" SelectedItem="{Binding SelectedTeacher.SelectedIndependentAssessment, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Вид НОКО (организация)" Binding="{Binding AssessmentName}" Width="220" MinWidth="200" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding AssessmentDateString}" Width="110" MinWidth="100" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Класс/Предмет" Binding="{Binding ClassSubject}" Width="160" MinWidth="140" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Кол-во всего" Binding="{Binding StudentsTotal}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Кол-во участие" Binding="{Binding StudentsParticipated}" Width="130" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Кол-во справились" Binding="{Binding StudentsPassed}" Width="150" MinWidth="140" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% успеваемости" Binding="{Binding PerformanceRate}" Width="150" MinWidth="140" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% обученности" Binding="{Binding LearningQualityRate}" Width="150" MinWidth="140" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="% СОУ" Binding="{Binding SouRate}" Width="100" MinWidth="90" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddIndependentAssessmentCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteIndependentAssessmentCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 5. Деятельность по раннему самоопределению ... -->
                        <TextBlock Text="5. Деятельность по раннему самоопределению и профессиональной ориентации обучающихся" FontWeight="Bold" TextWrapping="Wrap" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.SelfDeterminations}" SelectedItem="{Binding SelectedTeacher.SelectedSelfDetermination, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="150" MinWidth="130" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Наименование мероприятия" Binding="{Binding Name}" Width="300" MinWidth="280" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Роль педагога" Binding="{Binding Role}" Width="180" MinWidth="160" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddSelfDeterminationCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteSelfDeterminationCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 6. Участие обучающихся в олимпиадах ... -->
                        <TextBlock Text="6. Участие обучающихся в олимпиадах, конкурсах, фестивалях, соревнованиях (далее – События)" FontWeight="Bold" TextWrapping="Wrap" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.StudentOlympiads}" SelectedItem="{Binding SelectedTeacher.SelectedStudentOlympiad, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="150" MinWidth="130" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Наименование События" Binding="{Binding Name}" Width="260" MinWidth="240" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Форма участия" Binding="{Binding Form}" Width="150" MinWidth="130" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="ФИО участника/кадета" Binding="{Binding Cadet}" Width="240" MinWidth="220" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Результат" Binding="{Binding Result}" Width="150" MinWidth="130" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddStudentOlympiadCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteStudentOlympiadCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 7. Деятельность в качестве члена жюри ... -->
                        <TextBlock Text="7. Деятельность в качестве члена жюри олимпиад, конкурсов" FontWeight="Bold" TextWrapping="Wrap" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.JuryActivities}" SelectedItem="{Binding SelectedTeacher.SelectedJuryActivity, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="150" MinWidth="130" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Наименование мероприятия" Binding="{Binding Name}" Width="300" MinWidth="280" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding DateString}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddJuryActivityCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteJuryActivityCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 8. Проведение мастер-классов ... -->
                        <TextBlock Text="8. Проведение мастер-классов, открытых занятий, мероприятий" FontWeight="Bold" TextWrapping="Wrap" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.MasterClasses}" SelectedItem="{Binding SelectedTeacher.SelectedMasterClass, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="150" MinWidth="130" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="300" MinWidth="280" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding DateString}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddMasterClassCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteMasterClassCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 9. Наличие выступлений ... -->
                        <TextBlock Text="9. Наличие выступлений на научно-практических конференциях (семинарах, педагогических чтениях, симпозиумах, круглых столах)" FontWeight="Bold" TextWrapping="Wrap" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.Speeches}" SelectedItem="{Binding SelectedTeacher.SelectedSpeech, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="150" MinWidth="130" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="300" MinWidth="280" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding DateString}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddSpeechCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteSpeechCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 10. Наличие публикации ... -->
                        <TextBlock Text="10. Наличие публикации (наименование, где, когда опубликована, в том числе в электронном виде)" FontWeight="Bold" TextWrapping="Wrap" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.Publications}" SelectedItem="{Binding SelectedTeacher.SelectedPublication, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="150" MinWidth="130" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Наименование" Binding="{Binding Title}" Width="300" MinWidth="280" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding DateString}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddPublicationCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeletePublicationCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 11. Участие в экспериментальной ... -->
                        <TextBlock Text="11. Участие в экспериментальной и инновационной деятельности" FontWeight="Bold" TextWrapping="Wrap" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.ExperimentalProjects}" SelectedItem="{Binding SelectedTeacher.SelectedExperimentalProject, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Наименование проекта" Binding="{Binding Name}" Width="340" MinWidth="320" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding DateString}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddExperimentalProjectCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteExperimentalProjectCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 12. Наставническая деятельность -->
                        <TextBlock Text="12. Наставническая деятельность" FontWeight="Bold" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.Mentorships}" SelectedItem="{Binding SelectedTeacher.SelectedMentorship, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ФИО стажера" Binding="{Binding Trainee}" Width="240" MinWidth="220" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Номер приказа" Binding="{Binding Order}" Width="180" MinWidth="160" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата приказа" Binding="{Binding OrderDateString}" Width="150" MinWidth="140" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddMentorshipCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteMentorshipCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 13. Разработка программно-методического ... -->
                        <TextBlock Text="13. Разработка программно-методического сопровождения образовательного процесса" FontWeight="Bold" TextWrapping="Wrap" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.ProgramSupports}" SelectedItem="{Binding SelectedTeacher.SelectedProgramSupport, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Наименование рабочей программы" Binding="{Binding ProgramName}" Width="360" MinWidth="340" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridCheckBoxColumn Header="Контрольно-измерительные материалы" Binding="{Binding HasControlMaterials}" Width="280" MinWidth="260"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddProgramSupportCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteProgramSupportCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                        <!-- 14. Участие в профессиональных конкурсах -->
                        <TextBlock Text="14. Участие в профессиональных конкурсах" FontWeight="Bold" Margin="0,8,0,4"/>
                        <DataGrid ItemsSource="{Binding SelectedTeacher.ProfessionalCompetitions}" SelectedItem="{Binding SelectedTeacher.SelectedProfessionalCompetition, Mode=TwoWay}" PreviewMouseWheel="DataGrid_PreviewMouseWheel" AutoGenerateColumns="False" Margin="0,0,0,0" CanUserAddRows="False" HorizontalScrollBarVisibility="Auto" MinRowHeight="25" IsReadOnly="{Binding Path=DataContext.CanEditData, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource InverseBooleanConverter}}" PreparingCellForEdit="DataGrid_PreparingCellForEdit" CellEditEnding="DataGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Уровень" Binding="{Binding Level}" Width="150" MinWidth="130" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Наименование конкурса" Binding="{Binding Name}" Width="260" MinWidth="240" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Достижение" Binding="{Binding Achievement}" Width="180" MinWidth="160" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Дата" Binding="{Binding DateString}" Width="120" MinWidth="110" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                                <DataGridTextColumn Header="Ссылка" Binding="{Binding Link}" Width="*" MinWidth="120" ElementStyle="{StaticResource WrappedTextBlockCellStyle}" EditingElementStyle="{StaticResource EditingTextBoxStyle}"/>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                            <Button Content="+" Command="{Binding SelectedTeacher.AddProfessionalCompetitionCommand}" Padding="5,0" MinWidth="30" MinHeight="25"/>
                            <Button Content="-" Command="{Binding SelectedTeacher.DeleteProfessionalCompetitionCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="30" MinHeight="25"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>

        <Border Grid.Row="1" Background="#FFE0E0E0" Padding="5" BorderBrush="Gray" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="2" Content="Сохранить" HorizontalAlignment="Right" Padding="10,3" Command="{Binding SaveChangesCommand}"/>
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="{Binding LoginButtonText}" Padding="10,3" Command="{Binding ToggleLoginCommand}"/>
                    <TextBlock Text="{Binding UserStatusText}" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="SemiBold"
                               Visibility="{Binding IsLoggedIn, Converter={StaticResource BoolToVisConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="LightGray" BorderBrush="Gray" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding ConnectionStatusText}" Padding="5" VerticalAlignment="Center" TextWrapping="Wrap"/>
                <Button Grid.Column="1" Content="Повторить попытку" Margin="0,0,5,0" Padding="10,3" VerticalAlignment="Center"
                        Command="{Binding RetryConnectionCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoggedIn}" Value="True"/>
                                        <Condition Binding="{Binding IsDatabaseConnected}" Value="False"/>
                                        <Condition Binding="{Binding IsLoading}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>