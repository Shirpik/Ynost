<Window x:Class="Ynost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ynost" Height="800" Width="1200"
        Loaded="MainWindow_Loaded">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель -->
        <Grid Grid.Column="0" Background="#f3f6ff">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Преподаватели"
                       Grid.Row="0"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="8"/>

            <StackPanel Grid.Row="1" Margin="4">
                <TextBlock Text="Поиск:"
                           Margin="4,0,0,4"/>
                <TextBox x:Name="SearchBox"
                         TextChanged="SearchBox_TextChanged"
                         Margin="4,0"/>
            </StackPanel>

            <DataGrid x:Name="TeachersGrid"
                      Grid.Row="2"
                      ItemsSource="{Binding Teachers}"
                      SelectedItem="{Binding SelectedTeacher}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Margin="4">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ФИО"
                                        Binding="{Binding FullName}"
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Сплиттер -->
        <GridSplitter Grid.Column="1"
                      Width="5"
                      Background="#B0B0B0"/>

        <!-- Правая прокручиваемая панель -->
        <ScrollViewer Grid.Column="2"
                      x:Name="DetailsScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">

                <!-- 1. Итоговый аттестат -->
                <TextBlock Text="1. Итоговый аттестат"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.AcademicResults}"
                          SelectedItem="{Binding SelectedTeacher.SelectedAcademicResult, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Год"
                                            Binding="{Binding Year}"
                                            Width="60"/>
                        <DataGridTextColumn Header="Предмет"
                                            Binding="{Binding Subject}"
                                            Width="150"/>
                        <DataGridTextColumn Header="Сем 1"
                                            Binding="{Binding AvgSem1}"
                                            Width="70"/>
                        <DataGridTextColumn Header="Сем 2"
                                            Binding="{Binding AvgSem2}"
                                            Width="70"/>
                        <DataGridTextColumn Header="Динамика"
                                            Binding="{Binding Dynamics}"
                                            Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddAcademicResultCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteAcademicResultCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 2. ЕГЭ -->
                <TextBlock Text="2. ЕГЭ" FontWeight="Bold" Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.EgeResults}"
                          SelectedItem="{Binding SelectedTeacher.SelectedEgeResult, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Предмет"
                                            Binding="{Binding Subject}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Класс"
                                            Binding="{Binding Class}"
                                            Width="60"/>
                        <DataGridTextColumn Header="Всего"
                                            Binding="{Binding Total}"
                                            Width="60"/>
                        <DataGridTextColumn Header="% 61-80"
                                            Binding="{Binding Pct61to80}"
                                            Width="80"/>
                        <DataGridTextColumn Header="% Fail"
                                            Binding="{Binding PctFail}"
                                            Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddEgeResultCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteEgeResultCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 3. ОГЭ -->
                <TextBlock Text="3. ОГЭ" FontWeight="Bold" Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.OgeResults}"
                          SelectedItem="{Binding SelectedTeacher.SelectedOgeResult, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Предмет"
                                            Binding="{Binding Subject}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Класс"
                                            Binding="{Binding Class}"
                                            Width="60"/>
                        <DataGridTextColumn Header="Всего"
                                            Binding="{Binding Total}"
                                            Width="60"/>
                        <DataGridTextColumn Header="5"
                                            Binding="{Binding Mark5}"
                                            Width="40"/>
                        <DataGridTextColumn Header="Средний"
                                            Binding="{Binding Avg}"
                                            Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddOgeResultCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteOgeResultCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 4. ВПР / НОКО / PISA -->
                <TextBlock Text="4. ВПР / НОКО / PISA"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.IndependentAssessments}"
                          SelectedItem="{Binding SelectedTeacher.SelectedIndependentAssessment, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Процедура"
                                            Binding="{Binding Procedure}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Год"
                                            Binding="{Binding Date, StringFormat=yyyy}"
                                            Width="60"/>
                        <DataGridTextColumn Header="Класс/Предмет"
                                            Binding="{Binding ClassSubject}"
                                            Width="140"/>
                        <DataGridTextColumn Header="Успешно"
                                            Binding="{Binding Passed}"
                                            Width="70"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddIndependentAssessmentCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteIndependentAssessmentCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 5. Профориентация -->
                <TextBlock Text="5. Профориентация"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.SelfDeterminations}"
                          SelectedItem="{Binding SelectedTeacher.SelectedSelfDetermination, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Уровень"
                                            Binding="{Binding Level}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Мероприятие"
                                            Binding="{Binding Name}"
                                            Width="180"/>
                        <DataGridTextColumn Header="Роль"
                                            Binding="{Binding Role}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddSelfDeterminationCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteSelfDeterminationCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 6. Олимпиады / конкурсы обучающихся -->
                <TextBlock Text="6. Олимпиады / конкурсы обучающихся"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.StudentOlympiads}"
                          SelectedItem="{Binding SelectedTeacher.SelectedStudentOlympiad, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Уровень"
                                            Binding="{Binding Level}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Название"
                                            Binding="{Binding Name}"
                                            Width="160"/>
                        <DataGridTextColumn Header="Форма"
                                            Binding="{Binding Form}"
                                            Width="70"/>
                        <DataGridTextColumn Header="Ученик"
                                            Binding="{Binding Cadet}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Результат"
                                            Binding="{Binding Result}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddStudentOlympiadCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteStudentOlympiadCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 7. Работа в составе жюри -->
                <TextBlock Text="7. Работа в составе жюри"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.JuryActivities}"
                          SelectedItem="{Binding SelectedTeacher.SelectedJuryActivity, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Уровень"
                                            Binding="{Binding Level}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Событие"
                                            Binding="{Binding Name}"
                                            Width="180"/>
                        <DataGridTextColumn Header="Дата"
                                            Binding="{Binding Date, StringFormat=d}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddJuryActivityCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteJuryActivityCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 8. Мастер-классы / открытые уроки -->
                <TextBlock Text="8. Мастер-классы / открытые уроки"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.MasterClasses}"
                          SelectedItem="{Binding SelectedTeacher.SelectedMasterClass, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Уровень"
                                            Binding="{Binding Level}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Тема"
                                            Binding="{Binding Name}"
                                            Width="200"/>
                        <DataGridTextColumn Header="Дата"
                                            Binding="{Binding Date, StringFormat=d}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddMasterClassCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteMasterClassCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 9. Выступления -->
                <TextBlock Text="9. Выступления"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.Speeches}"
                          SelectedItem="{Binding SelectedTeacher.SelectedSpeech, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Уровень"
                                            Binding="{Binding Level}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Тема"
                                            Binding="{Binding Name}"
                                            Width="200"/>
                        <DataGridTextColumn Header="Дата"
                                            Binding="{Binding Date, StringFormat=d}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddSpeechCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteSpeechCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 10. Публикации -->
                <TextBlock Text="10. Публикации"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.Publications}"
                          SelectedItem="{Binding SelectedTeacher.SelectedPublication, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Уровень"
                                            Binding="{Binding Level}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Название"
                                            Binding="{Binding Title}"
                                            Width="200"/>
                        <DataGridTextColumn Header="Дата"
                                            Binding="{Binding Date, StringFormat=d}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddPublicationCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeletePublicationCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 11. Экспериментальные проекты -->
                <TextBlock Text="11. Экспериментальные проекты"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.ExperimentalProjects}"
                          SelectedItem="{Binding SelectedTeacher.SelectedExperimentalProject, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название"
                                            Binding="{Binding Name}"
                                            Width="220"/>
                        <DataGridTextColumn Header="Дата"
                                            Binding="{Binding Date, StringFormat=d}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddExperimentalProjectCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteExperimentalProjectCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 12. Наставничество -->
                <TextBlock Text="12. Наставничество"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.Mentorships}"
                          SelectedItem="{Binding SelectedTeacher.SelectedMentorship, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Наставляемый"
                                            Binding="{Binding Trainee}"
                                            Width="160"/>
                        <DataGridTextColumn Header="Приказ"
                                            Binding="{Binding Order}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Дата"
                                            Binding="{Binding OrderDate, StringFormat=d}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddMentorshipCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteMentorshipCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 13. Программно-методическое сопровождение -->
                <TextBlock Text="13. Программно-методическое сопровождение"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.ProgramSupports}"
                          SelectedItem="{Binding SelectedTeacher.SelectedProgramSupport, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Программа"
                                            Binding="{Binding ProgramName}"
                                            Width="220"/>
                        <DataGridCheckBoxColumn Header="Контр. материалы"
                                                Binding="{Binding HasControlMaterials}"
                                                Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddProgramSupportCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteProgramSupportCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 14. Профессиональные конкурсы -->
                <TextBlock Text="14. Профессиональные конкурсы"
                           FontWeight="Bold"
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.ProfessionalCompetitions}"
                          SelectedItem="{Binding SelectedTeacher.SelectedProfessionalCompetition, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Уровень"
                                            Binding="{Binding Level}"
                                            Width="100"/>
                        <DataGridTextColumn Header="Конкурс"
                                            Binding="{Binding Name}"
                                            Width="180"/>
                        <DataGridTextColumn Header="Достижение"
                                            Binding="{Binding Achievement}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Дата"
                                            Binding="{Binding Date, StringFormat=d}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddProfessionalCompetitionCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteProfessionalCompetitionCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

                <!-- 15. Курсы повышения квалификации -->
                <TextBlock Text="15. Курсы повышения квалификации" 
                           FontWeight="Bold" 
                           Margin="0,8,0,4"/>
                <DataGrid ItemsSource="{Binding SelectedTeacher.Trainings}"
                          SelectedItem="{Binding SelectedTeacher.SelectedTrainingCourse, Mode=TwoWay}"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          Margin="0,0,0,0"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Название курса" Binding="{Binding CourseName}" Width="200"/>
                        <DataGridTextColumn Header="Часы" Binding="{Binding Hours}" Width="60"/>
                        <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="60"/>
                        <DataGridTextColumn Header="Организация" Binding="{Binding Provider}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,12">
                    <Button Content="+" Command="{Binding SelectedTeacher.AddTrainingCourseCommand}" Padding="5,0" MinWidth="25"/>
                    <Button Content="-" Command="{Binding SelectedTeacher.DeleteTrainingCourseCommand}" Margin="5,0,0,0" Padding="5,0" MinWidth="25"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>